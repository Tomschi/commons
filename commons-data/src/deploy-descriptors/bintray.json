{
  "package": {
    "name": "${project.artifactId}",
    "repo": "oss-repo",
    "subject": "tomschi",
    "vcs_url": "https://github.com/Tomschi/commons",
    "github_use_tag_release_notes": true,
    "licenses": [
      "Apache-2.0"
    ],
    "public_download_numbers": false,
    "public_stats": false
  },
  "version": {
    "name": "${project.version}",
    "vcs_tag": "${project.version}",
    "released": "${timestamp}"
  },
  "files": [
    {
      "includePattern": "${project.build.directory}/(.*\.jar)",
      "uploadPattern": "$1"
    },
    {
      "includePattern": "${project.basedir}/pom.xml",
      "uploadPattern": "${project.artifactId}-${project.version}.pom"
    }
  ],
  "publish": true
}